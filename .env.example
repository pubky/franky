# =============================================================================
# Database Configuration
# =============================================================================
NEXT_PUBLIC_DB_NAME=franky
NEXT_PUBLIC_DB_VERSION=2

# =============================================================================
# Debug Mode
# =============================================================================
NEXT_PUBLIC_DEBUG_MODE=false

# =============================================================================
# Sync Configuration
# =============================================================================
# Sync time to live in milliseconds (default: 300000 - 5 minutes)
NEXT_PUBLIC_SYNC_TTL=300000

# =============================================================================
# Notification Polling Configuration
# =============================================================================
# Interval between notification polls in milliseconds (default: 8888)
NEXT_PUBLIC_NOTIFICATION_POLL_INTERVAL_MS=8888
# Whether to poll on start (default: false)
NEXT_PUBLIC_NOTIFICATION_POLL_ON_START=false
# Whether to respect page visibility (pause when tab hidden) (default: true)
NEXT_PUBLIC_NOTIFICATION_RESPECT_PAGE_VISIBILITY=true

# =============================================================================
# Stream Polling Configuration
# =============================================================================
# Interval between stream polls in milliseconds (default: 8888)
NEXT_PUBLIC_STREAM_POLL_INTERVAL_MS=8888
# Whether to poll on start (default: false)
NEXT_PUBLIC_STREAM_POLL_ON_START=false
# Whether to respect page visibility (pause when tab hidden) (default: true)
NEXT_PUBLIC_STREAM_RESPECT_PAGE_VISIBILITY=true
# Number of items to fetch per stream request (default: 10)
NEXT_PUBLIC_STREAM_FETCH_LIMIT=10
# Stream cache max age in milliseconds (default: 300000 - 5 minutes)
NEXT_PUBLIC_STREAM_CACHE_MAX_AGE_MS=300000
# Maximum number of tags to show in stream (default: 5)
NEXT_MAX_STREAM_TAGS=5

# =============================================================================
# TTL Coordinator Configuration
# =============================================================================
# Post TTL in milliseconds (default: 300000 - 5 minutes)
NEXT_PUBLIC_TTL_POST_MS=300000
# User TTL in milliseconds (default: 600000 - 10 minutes)
NEXT_PUBLIC_TTL_USER_MS=600000
# Batch interval for TTL checks in milliseconds (default: 5000 - 5 seconds)
NEXT_PUBLIC_TTL_BATCH_INTERVAL_MS=5000
# Maximum batch size for post TTL refresh (default: 20)
NEXT_PUBLIC_TTL_POST_MAX_BATCH_SIZE=20
# Maximum batch size for user TTL refresh (default: 20)
NEXT_PUBLIC_TTL_USER_MAX_BATCH_SIZE=20
# Retry delay for entities not yet indexed in Nexus in milliseconds (default: 60000 - 1 minute)
NEXT_PUBLIC_TTL_RETRY_DELAY_MS=60000

