echo "âœ¨ Checking code formatting..."
if ! npm run format:check; then
  echo ""
  echo "âŒ Code formatting check failed!"
  echo ""
  echo "Some files are not formatted according to Prettier rules."
  echo "Run the following command to fix formatting:"
  echo ""
  echo "  npm run format"
  echo ""
  echo "Then stage the changes and commit again:"
  echo ""
  echo "  git add ."
  echo "  git commit"
  echo ""
  exit 1
fi

echo "ğŸ” Running linter..."
