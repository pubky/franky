{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/atoms": ["./src/components/atoms/index.ts"],
      "@/atoms/*": ["./src/components/atoms/*"],
      "@/molecules": ["./src/components/molecules/index.ts"],
      "@/molecules/*": ["./src/components/molecules/*"],
      "@/organisms": ["./src/components/organisms/index.ts"],
      "@/organisms/*": ["./src/components/organisms/*"],
      "@/templates": ["./src/components/templates/index.ts"],
      "@/templates/*": ["./src/components/templates/*"],
      "@/hooks": ["./src/hooks/index.ts"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/__tests__/page.test.jsx"],
  "exclude": ["node_modules"]
}
