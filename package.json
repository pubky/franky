{
  "name": "franky",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "dev:https": "next dev --experimental-https --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clean": "rm -rf .next node_modules && npm install",
    "start:e2e": "cypress open -P cypress",
    "start:e2e:mobile": "cypress open -P cypress --config-file cypress.config.mobile.ts",
    "test:e2e": "cypress run -P cypress -b firefox",
    "test:e2e:mobile": "cypress run -P cypress -b firefox --config-file cypress.config.mobile.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:snapshots": "vitest run --reporter=verbose --testNamePattern=\"Snapshots\"",
    "test:update-snapshots": "vitest run --update --testNamePattern=\"Snapshots\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" --ignore-path .prettierignore",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
